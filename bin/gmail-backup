#! /usr/bin/env ruby
#
# @abstract Wrapper for the gmail-backup.sh shell script
#
# $Id: gmail-backup,v 91c3e9a734f7 2012/12/03 13:48:34 roberto $

require "gmail"
require "gmvault"

email = GmVault::Config.list[0]
base = GmVault::Config::DEF_DB

me = File.basename(__FILE__ + ".sh")
exec("/bin/sh", "-c", GMail::Utils.share_directory + "/#{me}", email, base, *ARGV)
